# ========================
# Server Configuration
# ========================
PORT=4000
NODE_ENV=development

# ========================
# Database
# ========================
MONGODB_URI=mongodb://localhost:27017/college-club-directory

# ========================
# Authentication
# ========================
# Generate a secure 64+ char string using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secure-randomly-generated-secret-key

# ========================
# Email (Nodemailer via SMTP, e.g. Gmail)
# ========================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM="College Club Directory" <noreply@collegeclubdirectory.com>

# ========================
# Development
# ========================
# Show OTP in API response during development
SHOW_DEV_OTP=true

# ========================
# CORS
# ========================
# Comma-separated list of allowed origins (leave empty to allow all in dev)
ALLOWED_ORIGINS=

# ========================
# Admin
# ========================
# Comma-separated list of admin emails who can approve clubs
APPROVER_EMAILS=admin@bmsce.ac.in

# ========================
# Frontend
# ========================
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000/api
NEXT_PUBLIC_APPROVER_EMAILS=admin@bmsce.ac.in
